{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "MessageBroker": {
    "Host": "rabbitmq",
    "UserName": "guest",
    "Password": "guest"
  },
  "ConnectionStrings": {
    "UserConnection": "Host=$POSTGRES_HOST;Port=5432;Database=$POSTGRES_DB;Username=$POSTGRES_USER;Password=$POSTGRES_PASSWORD;SSL Mode=Disable"
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-key-that-is-at-least-32-characters-long!",
    "Issuer": "YourApp",
    "Audience": "YourAppUsers",
    "ExpiryInMinutes": 90000,
    "RefreshTokenExpiryInDays": 7
  }
}
